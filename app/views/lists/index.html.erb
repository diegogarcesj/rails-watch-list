<div class="home-banner">
<h1>Save any kind of movies</h1>
<h4>Classic</h4>
</div>

<div class="container mt-3 mb-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>My Lists</h4>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success' %>
  </div>

  <div class="cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="card card-category"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=751&q=80)">
        <%= list.name %> <br />
      </div>
    <% end %>
  <% end %>
  </div>
</div>
