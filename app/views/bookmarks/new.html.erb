<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, crop: :fill %>')">
<h1>Add a movie to <%= @list.name %></h1>
</div>

<div class="container mt-3 mb-5">
  <div class="row justify-content-center">
    <div class="col-6">
    <%= simple_form_for [ @list, @bookmark ] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, input_html: { class: 'select2' }%>
    <%= f.submit 'Add a movie to list', class: 'btn btn-success' %>
    <% end %>
    </div>
  </div>
</div>
